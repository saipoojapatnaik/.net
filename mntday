namespace mnthday
{
    class Program
    {
        public static void Main()
        {
            int mnthday;
            Console.WriteLine("Enter Mnthday Number(1-12):");
            mnthday = Int32.Parse(Console.ReadLine());
            switch (mnthday)
            {
                case 1:
                case 3:
                case 5:
                case 7:
                case 8:
                case 10:
                case 12:
                    Console.WriteLine("31days");
                    break;
                case 4:
                case 6:
                case 9:
                case 11:
                    Console.WriteLine("30days");
                    break;
                case 2:
                    Console.WriteLine("28/29days");
                    break;
                default:
                    Console.WriteLine("Invalid input! please enter mnthday number between(1-12):");
                    break;
                    
            }
                   }
            }
    }
